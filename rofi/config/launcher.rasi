configuration {
	font:							"Noto Sans 10";
    show-icons:                     true;
	icon-theme: 					"Papirus";
    display-drun: 					"";
    drun-display-format:            "{name}";
    disable-history:                false;
    fullscreen:                     false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

/* -- Light -- */
* {
    background:                     #0D0E0Eff;
    background-alt:              	#0D0E0Eff;
    background-bar:                 #303030ff;
    foreground:                     #EDEDEDFF;
    accent:			            	#1A73E9FF;
    border:		               		#261112ff;
    selected:               		#262626ff;
}

/* -- Dark -- */
